<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="huge_text_view">
        <item name="android:textSize">@dimen/text_huge</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="large_text_view">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="normal_text_view">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="small_text_view">small_text_view>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

</resources>
